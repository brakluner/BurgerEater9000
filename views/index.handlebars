<h1>Burgers!</h1>

<div class="row">

<div class=".col-md-6" id="leftTable">

<h2>Burgers that are ready to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block eat=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>


<div id="rightTable">

<h2>Burgers Eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block eat=false}}
    {{/if}}
  {{/each}}
</ul>

</div>
<div id="leftTable">

<h3>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

